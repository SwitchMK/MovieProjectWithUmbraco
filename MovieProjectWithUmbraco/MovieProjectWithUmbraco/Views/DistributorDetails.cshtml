@using MovieProjectWithUmbraco.Models
@inherits UmbracoViewPage<DetailedDistributorInfo>

<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading image-content">
                        <div class="middle-align">
                            <img src="@Model.ImagePath" class="img-responsive distributor-image" />
                        </div>
                    </div>
                    <table class="table table-responsive">
                        <tr>
                            <th>Name of company</th>
                            <td>
                                @Model.CompanyName
                            </td>
                        </tr>
                        @if (Model.Founders != null && Model.Founders.Count() > 0)
                        {
                            <tr>
                                <th>Founders</th>
                                <td>
                                    <ul class="participants-ul">
                                        @foreach (var founder in Model.Founders)
                                        {
                                            <li>
                                                <a href="@founder.Url">@founder.Caption</a>
                                            </li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        }
                        <tr>
                            <th>Date of foundation</th>
                            <td>
                                @Model.DateOfFoundation.Year
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading movie-proj-panel-heading">
                        <h4>Plot</h4>
                    </div>
                    <div class="panel-body">
                        <p>@Html.Raw(Model.History)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.DistributedMovies != null && Model.DistributedMovies.Count() > 0)
{
    <div class="row">
        <div class="col-xs-12 col-md-offset-4 col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading movie-proj-panel-heading">
                    <h4>Distributed movies</h4>
                </div>
                <table class="table table-responsive">
                    @foreach (var movie in Model.DistributedMovies)
                    {
                        <tr>
                            <td><a href="@movie.Url">@movie.Caption</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
}