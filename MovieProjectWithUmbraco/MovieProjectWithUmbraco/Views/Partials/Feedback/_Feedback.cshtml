@inherits UmbracoViewPage<MovieProjectWithUmbraco.Models.Feedback>

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginUmbracoForm("SubmitFeedback", "Feedback", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextAreaFor(m => m.Content, htmlAttributes: new { @class = "form-control", @rows = "3", @placeholder = "Leave your feedback here..." })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-outline pull-right">Leave feedback</button>
            </div>
        }
    </div>
</div>
