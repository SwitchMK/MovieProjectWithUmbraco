@using MovieProjectWithUmbraco.Models
@inherits UmbracoViewPage<LoginModel>

<style>
    input {
        padding: 10px;
        border: 2px solid gray;
        border-radius: 5px;
        width: 100%;
    }

    input:hover, input:focus, input:active {
        border-color: forestgreen;
    }
</style>

<div class="row" style="margin-top: 100px; display: flex">
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4 col-sm-offset-2">
        @using (Html.BeginUmbracoForm("SubmitLoginForm", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group text-danger">
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                @*@Html.LabelFor(m => m.Login)*@
                @Html.TextBoxFor(m => m.Login, htmlAttributes: new { @*@class = "form-control"*@ type = "text", placeholder = "Enter your login" })
                @Html.ValidationMessageFor(m => m.Login)
            </div>
            <div class="form-group">
                @*@Html.LabelFor(m => m.Password)*@
                @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @*@class = "form-control"*@ type = "password", placeholder = "Enter your password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                <button class="btn btn-success" style="width: 100%;" type="submit">Log in</button>
            </div>
        }
    </div>
</div>