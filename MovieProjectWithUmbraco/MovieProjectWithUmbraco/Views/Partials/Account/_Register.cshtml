@using MovieProjectWithUmbraco.Models
@inherits UmbracoViewPage<RegisterModel>

<div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        @using (Html.BeginUmbracoForm("SubmitRegisterForm", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group text-danger">
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <label>Login</label>
                @Html.TextBoxFor(m => m.Login, htmlAttributes: new { @class = "form-control", type = "text" })
                @Html.ValidationMessageFor(m => m.Login)
            </div>
            <div class="form-group">
                <label>Full Name</label>
                @Html.TextBoxFor(m => m.FullName, htmlAttributes: new { @class = "form-control", type = "text" })
                @Html.ValidationMessageFor(m => m.FullName)
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", type = "text" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-group">
                <label>Password</label>
                @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control", type = "password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                <button class="btn btn-default pull-right" type="submit">Register</button>
            </div>
        }
    </div>
</div>
