@using MovieProjectWithUmbraco.Models;
@inherits UmbracoViewPage<SearchResponse>
@{
    var searchPageId = 2160;
    var searchPageUrl = Umbraco.TypedContent(searchPageId).Url;
}

<form action="@(searchPageUrl)" method="get">
    <div class="form-group">
        <div class="input-group">
            @Html.TextBoxFor(m => m.Query, htmlAttributes: new { @class = "form-control" })
            <div class="input-group-btn">
                <button class="btn btn-default btn-search"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </div>
</form>
