@inherits UmbracoViewPage<MovieProjectWithUmbraco.Models.Search>


@using (Html.BeginUmbracoForm("RenderSearchResults", "SiteLayout", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="input-group">
            @Html.TextBoxFor(m => m.Query, htmlAttributes: new { @class = "form-control" })
            <div class="input-group-btn">
                <button class="btn btn-default btn-search"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </div>
}
