@using MovieProjectWithUmbraco.Models
@inherits UmbracoViewPage<DistributorsModel>
@{
    Layout = "Layout.cshtml";
}

<style>
    td {
        text-align: left;
    }
</style>

<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: black; opacity: 0.75;">
                <h4 style="color: gray">Distributors</h4>
            </div>
            <table class="table table-responsive">
                <tbody>
                    @{
                        foreach (var distributor in Model.DistributorsInfo)
                        {
                            <tr>
                                <td class="vertical-align col-md-1 col-sm-2 col-xs-4">
                                    <img src="@distributor.ImagePath" class="img-responsive" alt="Distributor Poster">
                                </td>
                                <td class="vertical-align">
                                    <h4><a href="@distributor.Url">@distributor.CompanyName (@distributor.DateOfFoundation.Year)</a></h4>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>