@using MovieProjectWithUmbraco.Models
@inherits UmbracoViewPage<DetailedPersonInfo>
@{
	Layout = "Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading image-content">
                        <div class="middle-align">
                            <img src="@Model.ImagePath" class="img-responsive person-image center-image" />
                        </div>
                    </div>
                    <table class="table table-responsive">
                        <tr>
                            <th>Full name</th>
                            <td>
                                @Model.FullName
                            </td>
                        </tr>
                        <tr>
                            <th>Short name</th>
                            <td>
                                @Model.ShortName
                            </td>
                        </tr>
                        <tr>
                            <th>Date of birth</th>
                            <td>
                                @Model.DateOfBirth.Year
                            </td>
                        </tr>
                        @if (Model.Countries != null && Model.Countries.Count() > 0)
                        {
                            <tr>
                                <th>Country</th>
                                <td>
                                    <ul class="participants-ul">
                                        @foreach (var country in Model.Countries)
                                        {
                                            <li>
                                                <span>@country</span>
                                            </li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        }
                        @if (Model.Careers != null && Model.Careers.Count() > 0)
                        {
                            <tr>
                                <th>Occupation</th>
                                <td>
                                    <ul class="participants-ul">
                                        @foreach (var career in Model.Careers)
                                        {
                                            <li>
                                                <span>@career</span>
                                            </li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading movie-proj-panel-heading">
                        <h4>Biography</h4>
                    </div>
                    <div class="panel-body">
                        <p>@Html.Raw(Model.Biography)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.Filmography != null && Model.Filmography.Count() > 0)
{
    <div class="row">
        <div class="col-xs-12 col-md-offset-4 col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading movie-proj-panel-heading">
                    <h4>Filmography</h4>
                </div>
                <table class="table table-responsive">
                    @foreach (var movie in Model.Filmography)
                    {
                        <tr>
                            <td><a href="@movie.Url">@movie.Caption</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
}