@using MovieProjectWithUmbraco.Models
@inherits UmbracoViewPage<HomePage>
@{
    Layout = "Layout.cshtml";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (var j = 0; j < Model.News.Take(4).Count(); j++)
        {
            if (j == 0)
            {
                <li data-target="#myCarousel" class="active" data-slide-to="@j"></li>
            }
            else
            {
                <li data-target="#myCarousel" data-slide-to="@j"></li>
            }
        }
    </ol>

    <div class="carousel-inner" role="listbox">
        @{
            var i = 0;
            foreach (var item in Model.News.Take(4))
            {
                if (i++ == 0)
                {
                    <div class="item active">
                        <img src="@item.ImagePath" alt="@item.Title">
                        <div class="carousel-caption">
                            <h3><a href="@item.Url" style="color: #fff; text-decoration: none;">@item.Title</a></h3>
                        </div>
                    </div>
                }
                else
                {
                    <div class="item">
                        <img src="@item.ImagePath" alt="@item.Title">
                        <div class="carousel-caption">
                            <h3><a href="@item.Url" style="color: #fff; text-decoration: none;">@item.Title</a></h3>
                        </div>
                    </div>
                }
            }
        }
    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default" style="margin-top: 20px">
            <div class="panel-heading" style="background-color: black; opacity: 0.75;">
                <h4 style="font-weight: bold; text-transform: uppercase">Feed</h4>
            </div>
            <div class="panel-body">
                @foreach (var newsItem in Model.News)
                {
                    <div class="blog-inner">
                        <a href="@newsItem.Url"><img style="margin-left: auto; margin-right: auto;" class="img-responsive" src="@newsItem.ImagePath" alt="Blog"></a>
                        <div class="desc">
                            <h3><a href="@newsItem.Url">@newsItem.Title</a></h3>
                            <p>@Umbraco.Truncate(newsItem.NewsContent, 450)</p>
                            <p><a style="margin-bottom: 15px" href="@newsItem.Url" class="btn btn-primary btn-outline with-arrow pull-right">Read More</a></p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row quote" style="margin-bottom: 20px;">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
        <div class="row" style="margin-top: 15px">
            <div style="min-height: 250px; display: flex">
                <div style="margin-bottom: auto; margin-top: auto">
                    <img class="quote-image img-circle" src="@Model.Intro.ImagePath" style="float: left" />
                    <blockquote>@Html.Raw(Model.Intro.QuoteText)</blockquote>
                </div>
            </div>
        </div>
    </div>
</div>